<!-- 吹き出し + 名前 -->
<div class="flex w-full mb-2" data-sender-id="<%= chat_message.user_id %>">
  <div class="flex flex-col max-w-xs">
    <div class="text-xs text-gray-500 mb-1">
      <%= chat_message.user.name %> ・
      <time class="text-xs opacity-50 ml-1"><%= l chat_message.created_at, format: :short %></time>
    </div>
    <div class="message-bubble px-3 py-2 rounded-lg break-words max-w-xs">
      <%= chat_message.content %>
    </div>
  </div>
</div>