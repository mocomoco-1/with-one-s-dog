<div class="card bg-white shadow-xl max-w-xl w-full mx-auto">
  <div class="card-body">
    <h2 class="card-title justify-center mb-6">ログイン</h2>

    <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local:true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-control mb-2">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input w-full input-md input-secondary", placeholder: "メールアドレスを入力してください" %>
    </div>

    <div class="form-control mb-2">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input w-full input-md input-secondary", placeholder: "パスワードを入力してください" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label "ログイン状態を保持" %>
    </div>
    <% end %>

    <button class="form-control mt-5 w-full">
      <%= f.submit "ログイン", class:"btn btn-md btn-secondary" %>
    </button>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>