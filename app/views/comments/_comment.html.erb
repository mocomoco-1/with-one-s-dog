<div id="comment-<%= comment.id %>" class="card bg-white shadow-md p-4 mb-4">
  <div class="flex items-start justify-between">
    <!-- 左側：アイコン＋本文 -->
    <%= link_to user_path(comment.user), class: "flex items-start gap-2" do %>
    <%= image_tag "dog.png", class: "w-12 h-12 rounded-full flex-shrink-0" %>
    <div class="flex flex-col">
      <h3 class="font-normal text-sm whitespace-nowrap hover:underline"><%= comment.user.name %></h3>
      <p><%= simple_format(comment.content) %></p>
    </div>
    <% end %>
    <!-- 右側：更新日時 -->
    <div class="text-xs text-gray-500 whitespace-nowrap">
      <%= comment.updated_at.strftime('%Y/%m/%d %H:%M') %>
    </div>
  </div>

  <% if user_signed_in? && current_user.own?(comment) %>
  <div class="mt-2 flex justify-end gap-2">
    <%= link_to "#", class: "edit-comment-link text-blue-500 hover:underline" do %>
    <i class="bi bi-pencil-fill"></i>
    <% end %>
    <%= link_to "#", class: "delete-comment-link text-red-500 hover:underline" do %>
    <i class="bi bi-trash-fill"></i>
    <% end %>
  </div>
  <% end %>
</div>