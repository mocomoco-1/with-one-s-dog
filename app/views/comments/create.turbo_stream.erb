<% if @comment.errors.present? %>
  <%= turbo_stream.replace "flash" do %>
    <%= render "shared/flash_message" %>
  <% end %>
  <%= turbo_stream.replace "comment-form" do %>
    <%= render 'comments/form', comment: @comment, commentable: @commentable %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "table-comment" do %>
    <%= render 'comments/comment', comment: @comment %>
  <% end %>
  <%= turbo_stream.replace "comment-form" do %>
    <%= render 'comments/form', comment: Comment.new, commentable: @commentable %>
  <% end %>
<% end %>