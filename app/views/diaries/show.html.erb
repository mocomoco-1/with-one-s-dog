<% content_for(:title, t('.title')) %>
<div class="w-full sm:w-full md:max-w-md lg:max-w-lg xl:max-w-2xl mx-auto mt-6">
  <div class="flex flex-col w-full">
    <%= link_to diaries_path, class: "flex items-center gap-1" do %>
    <i class="fas fa-arrow-left"></i>
    <i class="text-sm font-semibold hover:underline">日記一覧へ</i>
    <% end %>
  </div>
  <h1 class=" text-xl font-semibold text-center">
    <i class="far fa-edit"></i>日記詳細
  </h1>
  <div class="card bg-white shadow-xl sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-2xl mx-auto overflow-hidden">
    <div class="card-body">
      <div class="flex-1 flex flex-col">
        <!-- アバターとボタンを横並び -->
        <div class="flex justify-between items-start mb-1">
          <%= render "shared/name_icon", user: @diary.user %>
          <div class="flex ml-auto space-x-2">
            <% if  user_signed_in? && current_user.own?(@diary) %>
            <%= link_to "編集", edit_diary_path(@diary), class:"btn px-2 py-1 btn-accent" %>
            <%= link_to "削除", diary_path(@diary), data: { turbo_method: :delete, turbo_confirm: t("defaults.delete_confirm") }, class:"btn px-2 py-1 btn-error" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="flex justify-between items-start">
        <div class="flex mb-1">
          <span class="text-gray-600 font-semibold"><%= @diary.written_on.strftime("%Y年%m月%d日(%a)") %></span>
        </div>
        <% if @diary.status_published? %>
        <span class="btn btn-xs btn-success">公開中</span>
        <% else %>
        <span class="btn btn-xs">非公開</span>
        <% end %>
      </div>
      <p class="text-left"><%= simple_format(@diary.content) %></p>
      <!-- 画像 -->
      <% if @diary.images.attached? %>
      <div data-controller="swiper" class="swiper w-full max-w-full overflow-hidden">
        <%= render "swiper_images", diary: @diary, size: 350 %>
      </div>
      <% end %>
      <%= render "reactions/reactions", reactable: @diary %>
    </div>
  </div>
  <%= render "comments/form", comment: @comment, commentable: @commentable %>
  <div id=" table-comment" class="flex flex-col">
    <!-- コメント一覧 -->
    <% @comments.each do |comment| %>
    <%= render "comments/comment", comment: comment %>
    <% end %>
  </div>
</div>