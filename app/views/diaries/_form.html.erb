<div data-controller="preview" data-preview-max-width-value="1920" data-preview-max-height-value="1080" data-preview-quality-value="0.8" data-preview-enable-resize-value="true">
  <%= form_with model: diary, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :written_on, class: "font-bold mb-3 block" do %>
    日付
    <span class="text-red-500">*</span>
    <% end %>
    <%= f.date_field :written_on, class: "input input-secondary" %>
  </div>
  <div class="mb-3">
    <%= f.label :images, class: "font-bold mb-3 block" %>
    <%= f.file_field :images, multiple: true, class: "input input-secondary", accept: "image/*", data:{ preview_target: "input", action: "change->preview#preview" } %>
    <div class="preview-container flex flex-wrap gap-2" data-preview-target="images"></div>
    <% if diary.persisted? && diary.images.attached? %>
    <p>選択済みの画像（削除する画像にチェックをつけてください）</p>
    <div class=" flex flex-wrap gap-4 max-w-4xl">
      <% diary.images.each do |image| %>
      <div class="card bg-base-100 shadow-md w-40 card-compact">
        <figure>
          <%= image_tag image.variant(resize_to_limit: [100, 100]), class: "rounded-lg flex-shrink-0" %>
        </figure>
        <div class="card-body p-4 flex flex-row items-center gap-2">
          <%= check_box_tag "diary[image_ids][]", image.id, false, id: "diary_image_ids_#{image.id}", class: "checkbox checkbox-error" %>
          <label for="diary_image_ids_<%= image.id %>" class="label cursor-pointer">
            <span class="label-text">削除する</span>
          </label>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= f.label :content, class: "font-bold mb-3 block" do %>
    日記
    <span class="text-red-500">*</span>
    <% end %>
    <%= f.text_area :content, class: "input w-full input-secondary p-2 h-80 resize-y leading-1", placeholder: "本文は必須です" %>
  </div>
  <div class="mb-3">
    <%= f.label :status, class: "font-bold block mb-2" do %>
    公開設定
    <span class="text-red-500">*</span>
    <% end %>
    <div class="flex justify-center">
      <label class="flex items-center w-32 justify-center space-x-2">
        <%= f.radio_button :status, "private", class: "radio radio-lg radio-secondary" %>
        <span>非公開</span>
      </label>
      <label class="flex items-center w-32 justify-center space-x-2">
        <%= f.radio_button :status, "published", class: "radio radio-lg radio-secondary" %>
        <span>公開</span>
      </label>
    </div>
  </div>
  <%= f.submit "投稿する", class: "btn btn-md btn-secondary" %>
  <% end %>
</div>