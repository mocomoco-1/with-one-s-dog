<%= link_to "#", class: "block" do %>
<div class="card bg-white card-compact shadow-md p-4 flex gap-4 hover:bg-gray-50 transition-colors duration-200">

  <!-- アバター -->
  <div class=" w-12 h-12 rounded-full bg-gray-300 flex-shrink-0 flex items-center justify-center">
    avatar
  </div>
  <!-- 右側の情報 -->
  <div class="flex-1 flex flex-col">
    <!-- ユーザー名と日付を横並び -->
    <div class="flex justify-between items-start">
      <span class="font-small"><%= consultation.user.name %></span>
      <span class="text-xs text-gray-500"><%= consultation.created_at.strftime("%-m/%-d %H:%M") %></span>
    </div>
    <!-- タイトル -->
    <h1 class="font-semibold text-lg mt-1"><%= consultation.title %></h1>
    <!-- 本文 -->
    <p class="text-sm text-gray-700 mt-1"><%= truncate(consultation.content, length: 80) %></p>
  </div>
</div>
<% end %>