<%= link_to consultation_path(consultation), class: "block" do %>
<div class="card bg-white card-compact shadow-md p-4 flex gap-4 hover:bg-gray-50 transition-colors duration-200">
  <!-- 右側の情報 -->
  <div class="flex-1 flex flex-col">
    <div class="flex justify-between items-center">
      <!-- 左側: アバター + 名前 -->
      <div class="flex items-center space-x-2">
        <%= image_tag "dog", class: "w-12 h-12 rounded-full flex-shrink-0 flex items-center justify-center" %>
        <span class="font-normal text-sm"><%= consultation.user.name %></span>
      </div>
      <span class="text-xs text-gray-500"><%= consultation.created_at.strftime("%-m/%-d %H:%M") %></span>
    </div>
    <!-- タイトル -->
    <h1 class="font-semibold text-lg mt-1"><%= consultation.title %></h1>
    <!-- 本文 -->
    <p class="text-sm text-gray-700 mt-1"><%= truncate(consultation.content, length: 80) %></p>
  </div>
</div>
<% end %>