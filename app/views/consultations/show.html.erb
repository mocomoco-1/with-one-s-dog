<div class="w-full sm:w-full md:max-w-md lg:max-w-lg xl:max-w-2xl mx-auto mt-6">
  <div class="flex flex-col text-center mb-6 w-full">
    <h1 class=" text-xl font-semibold text-left">
      <i class="far fa-comment-dots"></i>お悩み相談詳細
    </h1>
    <div class="card bg-white shadow-md w-[calc(100%-1rem)] sm:w-[calc(100%-2rem)] md:max-w-md lg:max-w-lg xl:max-w-2xl mx-auto mt-6">
      <div class="card-body">
        <div class="flex-1 flex flex-col">
          <!-- アバターとボタンを横並び -->
          <div class="flex justify-between items-start mb-1">
            <%= image_tag "dog.png", class: "w-14 h-14 rounded-full flex-shrink-0 flex items-center justify-center" %>
            <div class="flex ml-auto space-x-2">
              <% if  user_signed_in? && current_user.own?(@consultation) %>
              <%= link_to "編集", edit_consultation_path(@consultation), class:"btn px-2 py-1 btn-accent" %>
              <%= link_to "削除", consultation_path(@consultation), data: { turbo_method: :delete, turbo_confirm: t("defaults.delete_confirm") }, class:"btn px-2 py-1 btn-error" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="flex-1 flex flex-col">
          <!-- ユーザー名と日付を横並び -->
          <div class="flex justify-between items-start mb-4">
            <span class="font-small"><%= @consultation.user.name %></span>
            <span class="text-xs text-gray-500"><%= @consultation.created_at.strftime("%-m/%-d %H:%M") %></span>
          </div>
          <h2 class="card-title text-xl font-semibold mb-2"><%= @consultation.title %></h2>
          <p class="card-text"><%= @consultation.content %></p>
        </div>
      </div>
    </div>
    <!-- コメントフォーム -->
    <%= render partial: "comments/form", locals: { comment: @comment, consultation: @consultation } %>
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <table class="table">
          <tbody id="table-comment">
            <!-- コメント一覧 -->
            <%= render partial: "comments/comment", collection: @comments %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>